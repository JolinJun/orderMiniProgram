/* pages/order/orderList/orderList.wxss */

.tab-box {
    height: 92rpx;
    background: rgba(255, 255, 255, 1);
    flex-shrink: 0;
}

.tab-box .tab-item {
    height: 100%;
    color: #666;
    font-size: 28rpx;
    position: relative;
}

.tab-box .tab-item.active {
    color: #EB524B;
}

.tab-box .tab-item .active {
    width: 100%;
    height: 4rpx;
    background: #DE3E26;
    position: absolute;
    left: 0;
    bottom: 0;
}

.content {
    flex: 1;
    background: #f5f5f5;
    overflow-y: scroll;
}

.empty {
    margin-top: 208rpx;
}

.empty .img {
    width: 260rpx;
    height: 166rpx;
    margin-bottom: 40rpx;
}

.tip {
    color: #666;
    font-size: 32rpx;
}

.order-list {
    margin-top: 40rpx;
    padding: 0 20rpx;
}

.order-item {
    background: white;
    padding: 0 20rpx;
    border-radius: 12rpx;
    margin-bottom: 20rpx;
}

.order-item .title-box {
    height: 88rpx;
    border-bottom: 1rpx solid #E3E3E3;
}

.order-item .time {
    color: #333;
    font-size: 32rpx;
    font-weight: bold;
}

.order-item .status-text {
    color: #999999;
    font-size: 28rpx;
}

.order-item .btn {
    width: 176rpx;
    height: 60rpx;
    border-radius: 60rpx;
    border: 1rpx solid #EB524B;
    color: #EB524B;
    font-size: 28rpx;
}

.good-list {
    width: 510rpx;
    flex-wrap: wrap;
    position: relative;
}

.good-item {
    position: relative;
    margin-right: 20rpx;
    margin-top: 20rpx;
}

.good-item .img {
    width: 150rpx;
    height: 150rpx;
    border-radius: 12rpx;
    background-color: pink;
    display: block;
}

.good-item .number {
    width: 42rpx;
    height: 36rpx;
    background: rgba(0, 0, 0, .52);
    border-radius: 12rpx 0px 12rpx 0px;
    position: absolute;
    bottom: 0rpx;
    right: 0;
    color: white;
    font-size: 24rpx;
}

.good-item.fun-box .text {
    color: #333333;
    font-size: 24rpx;
}

.good-item.fun-box .icon {
    width: 24rpx;
    height: 24rpx;
    margin-top: 4rpx;
}

.good-item.fun-box {
    height: 150rpx;
    width: 150rpx;
    position: absolute;
    top: 0;
    right: -170rpx;
}

.order-item .info-box {
    padding-top: 40rpx;
    padding-bottom: 34rpx;
}

.order-item .info-box .label {
    font-size: 24rpx;
    color: #999999;
    margin-right: 16rpx;
}

.order-item .info-box .tip {
    font-size: 28rpx;
    color: #999999;
}

.order-item .info-box .total {
    font-size: 28rpx;
    color: #333333;
    font-weight: bold;
    margin-left: 10rpx;
}